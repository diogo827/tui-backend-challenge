{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "Controllers/*": ["src/controllers/*"],
            "Exceptions/*": ["src/exceptions/*"],
            "Interfaces/*": ["src/interfaces/*"],
            "Middleware/*": ["src/middleware/*"],
            "Models/*": ["src/models/*"],
            "Services/*": ["src/services/*"],
            "Utils/*": ["src/utils/*"],
    }
},
    "include": [
        "src/**/*"
    ]
}